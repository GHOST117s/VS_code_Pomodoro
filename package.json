{
  "name": "web-viewer-vscode",
  "displayName": "Web Viewer",
  "description": "A customizable web viewer for displaying web pages in the VS Code explorer sidebar.",
  "version": "1.5.0",
  "icon": "images/AnalogClock.gif",
  "publisher": "sidharthkumar",
  "repository": {
    "type": "git",
    "url": "https://github.com/GHOST117s/VS_code_Pomodoro"
  },
  "bugs": {
    "url": "https://github.com/GHOST117s/VS_code_Pomodoro/issues"
  },
  "homepage": "https://github.com/GHOST117s",
  "license": "MIT",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:webViewer.webViewerView"
  ],
  "keywords": [
    "web",
    "viewer",
    "browser",
    "iframe",
    "url",
    "website",
    "explorer",
    "sidebar",
    "VSCode tools",
    "developer tools",
    "webview",
    "custom views",
    "VSCode extension"
  ],
  "main": "./out/extension.js",
  "l10n": "./l10n",
  "contributes": {
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "webViewer.webViewerView",
          "name": "%extension.webViewer.tab.name%"
        }
      ]
    },
    "configuration": {
      "title": "Web Viewer",
      "properties": {
        "webViewer.url": {
          "type": "string",
          "default": "https://www.example.com",
          "description": "%extension.webViewer.url.description%"
        },
        "webViewer.enableJavascript": {
          "type": "boolean",
          "default": true,
          "description": "%extension.webViewer.enableJavascript.description%"
        },
        "webViewer.refreshInterval": {
          "type": "number",
          "default": 0,
          "minimum": 0,
          "maximum": 3600,
          "description": "%extension.webViewer.refreshInterval.description%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@vscode/l10n": "^0.0.18"
  }
}
